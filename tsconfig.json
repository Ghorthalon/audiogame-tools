  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "es6",
    "target": "es6",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true
  },
  "include": [
    "engine/**/*"
  ],
  "exclude": [
    "node_modules",
    "example",
    "vendor/"
  ]
}